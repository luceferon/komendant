procedure TFMWelcom.FormShow(Sender: TObject);
var
  FilePath, DFilePath: string;
  CurrentVersion: TDateTime;
  UpdateVersion: TDateTime;
begin
  AdvLockApp1.Lock;
  DFilePath:= '\\192.168.28.2\smb_share\!!набор софта на полигонный сервер\Общий софт\';
  FilePath := '\\192.168.28.2\smb_share\!!набор софта на полигонный сервер\Общий софт\Kommendant.exe';
  CurrentVersion := FileAge(ParamStr(0));
  UpdateVersion := FileAge(FilePath);

  if UpdateVersion > CurrentVersion then
  begin
    // Обновление требуется
    if MessageDlg('Доступна новая версия программы! Хотите скачать ее?', mtConfirmation, [mbYes, mbNo], 0) = mrYes then
    begin
      ShellExecute(0, 'open', PChar('explorer.exe'), PChar(DFilePath), nil, SW_SHOW);
    end;
  end;
end;

end.
