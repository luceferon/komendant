procedure TFMWelcom.FormShow(Sender: TObject);
var
  FilePath: string;
  CurrentVersion: TDateTime;
  UpdateVersion: TDateTime;
begin
  FilePath := '\\192.168.28.2\smb_share\!!набор софта на полигонный сервер\Общий софт\Kommendant.exe';
  CurrentVersion := FileAge(ParamStr(0));
  UpdateVersion := FileAge(FilePath);
  if UpdateVersion > CurrentVersion then
    ShowMessage('Вышла новая версия приложения. Обратитесь к системному администратору')
